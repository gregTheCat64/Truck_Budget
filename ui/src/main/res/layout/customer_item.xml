<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_company_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_home_work_24"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_name"
        android:layout_marginStart="8dp"
        style="@style/TextAppearance.MyCardTitle"
        />

    <TextView
        android:id="@+id/phoneNumber"
        app:drawableStartCompat="@drawable/baseline_local_phone_24"
        android:drawablePadding="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"

        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone number"
        />

    <TextView
        android:id="@+id/atiNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:drawablePadding="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Ati number"
        app:drawableStartCompat="@drawable/ati_icon" />

    </LinearLayout>
</androidx.cardview.widget.CardView>