<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Заявка номер 1111 от 12 января"
            style="@style/TextAppearance.MyTitleMedium"
            />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Миронов"
            android:layout_marginTop="4dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/baseline_apartment_24"
             />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Саратов - Ковылкино"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/baseline_route_24"
           />

    </LinearLayout>

    <TextView
        android:id="@+id/income"
        android:layout_gravity="end|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35000 р."
        style="@style/TextAppearance.MyTitleLarge"
        android:layout_margin="8dp" />

</androidx.cardview.widget.CardView>